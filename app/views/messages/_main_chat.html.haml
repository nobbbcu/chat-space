#target
.mainchat
  .header
    .header__heading
      .header__heading__group_name
        =@group.name
      .header__heading__group_member
        - @group.users.each do |user|
          = user.name

    .edit
      =link_to edit_group_path(params[:group_id]), class: "header__edit__btn" do
        Edit

  .contents
    =render @messages

 
  = form_for [@group, @message], html: {id: :form} do |f|
    #footer
      #footer__window
        = f.text_field :content, id: "footer__window__input", placeholder: "type a message"
        = f.label :image, id: 'footer__mask__image' do
          = icon('fas', 'images', id: "footer__window__image_btn") 
          = f.file_field :image, style: "display: none"
      = f.submit "Send", id: "footer__send_btn"
