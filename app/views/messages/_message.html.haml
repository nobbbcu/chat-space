%div.contents__message{data: {message_id: message.id}}
  .contents__message__title
    .contents__message__title__name
      = message.user.name
    .contents__message__title__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .contents__message__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: "contents__message__image" if message.image.present?
